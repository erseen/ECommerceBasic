@model ProductModel
@*Categories Get methodu için categori listesini çağırıyor ve selecte list 
olarak ekleme yapıyor 
*@

@{
    var categories= Model.Categories; 
}

<h1 class="h3"> Create Product </h1>
<hr />
<div class="row">
    <div class="col-md-8">
<form asp-controller="Admin" asp-action="CreateProduct" method="post">
    <div class="form-group row">
                <label asp-for="Name"  class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input  class="form-control" asp-for="Name">
        </div>
    </div>
            <div class="form-group row">
                <label asp-for="CategoryId" asp-for="CategoryId" class="control-label col-sm-2">Category</label>
                <div class="col-sm-10">
                    <select asp-for="CategoryId" class="form-control">
                        <option value="">-- Lütfen Category Seçiniz --</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }

                    </select>
                </div>
               
            </div>

    <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="Description"> </textarea>
        </div>
        </div>
        <div class="form-group row">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Image Url</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="ImageUrl">
            </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price"  class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price">
                </div>
             </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                  <button type="submit" value="Save Product" class="btn-outline-primary">
                       Save Product
                  </button>
                </div>
            </div>
</form>
</div>
</div>