@model HomeViewModel 

@{
var products = Model.Products; 
}

       

<div class="row">
    <div class="col-md-12">

        <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="CreateProduct">Product Add</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width:5%;" scope="col">Id</th>
                    <th style="width:25%;" scope="col">Image</th>
                    <th style="width:45px;" scope="col">Name</th>
                    <th style="width:5%;" scope="col">Price</th>
                    <th style="width:20%;" scope="col"></th>


                </tr>
            </thead>
            <tbody>
               @if(products.Count()>0)
                {

                @foreach (var product in products)
                {

                <tr>
                    <td>@product.ProductId</td>
                    <td><img src="~/img/@product.ImageUrl" style="width:120px; height:120px; object-fit:cover;" alt="@product.Name" width="80px" /></td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                                <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@product.ProductId" class="btn btn-primary "> Edit </a>
                        
                        <form asp-controller="Admin" asp-action="DeleteProduct" method="post" style="display:inline ;">
                        <button type="submit" style=color:white; class="btn btn-danger">Delete</button>
                        <input type="hidden" name="ProductId" value="@product.ProductId">
                        </form>
                   

                    </td>
                </tr>
                    }
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-warning">
                                <h3>No Product </h3>
                            </div>
                        </div>
                    </div>
                }

            </tbody>
        </table>
    
    </div>

</div>

