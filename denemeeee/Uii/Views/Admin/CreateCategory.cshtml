@model CategoryModel
@*Categories Get methodu için categori listesini çağırıyor ve selecte list
olarak ekleme yapıyor
*@

<h1 class="h3"> Create Category </h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateCategory" method="post">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" value="Save Product" class="btn-outline-primary">
                        Save Product
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>