@model Product

<div class="col-md-4 mb-2">
    <div class="card">
        <div class="d-flex align-items-center justify-content-center">
            <img class="card-img-top" src="~/img/@Model.ImageUrl" style="width:120px; height:120px; object-fit:cover;" alt="" width="80px" height="100px">
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-primary btn-sm">İncele</a>
            <form method="POST" action="/product/delete" style="display: inline;">
                <input type="hidden" name="ProductId" value="@Model.ProductId">
            </form>
        </div>
    </div>
</div>